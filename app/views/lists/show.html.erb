<h1><%= @list.name %></h1>
<div class="button">
  <%= link_to 'Add New Movie', new_list_bookmark_path(@list) %>
</div>
<div class="all-movies">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="movie">
    <%= image_tag bookmark.movie.movie_image %>
    <p><%= bookmark.movie.title %>, <%= bookmark.movie.year %></p>
    <p><%= bookmark.movie.description %></p>
    <p>Rating <%= bookmark.movie.rating %>/10</p>
    <div class="bookmark">
      <p><%= bookmark.comment %></p>
      <%= link_to 'Remove',
                    bookmark_path(bookmark),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
    </div>
  </div>
  <% end %>
</div>
<div class="submit-button">
  <%= link_to 'Go Back', root_path %>
</div>
